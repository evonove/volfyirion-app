<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar">
        <!-- this is set to windowBackground instead of background as a workaround
             on Android 8.0, otherwise splash screen do not disappear -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/back</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/back</item>
    </style>

    <style name="VolfyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/darkred</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/back</item>
    </style>
</resources>
